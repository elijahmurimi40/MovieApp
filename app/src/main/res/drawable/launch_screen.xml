<?xml version="1.0" encoding="utf-8"?>
<!-- android:opacity="opaque" critical in preventing a flash of black as the theme transit-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="opaque">

    <!-- background color change to use app theme -->
    <item android:drawable="@android:color/white" />

    <!-- App Logo 144dp color of app icon -->
    <item>
        <bitmap android:src="@drawable/ic_launcher" android:gravity="center" />
    </item>
</layer-list>